<div class="ui stacked segment padding-top">
    <h1><%= @proficiency.game.name %> - <%= @proficiency.name %></h1> 

  <div class="field">
    <%= @proficiency.description %>
  </div>

  <img src="<%= @proficiency.picture_url %>"/>
  </div>

  <tbody>
  <% @proficiency.proficiency_posts.each do |proficiency_post| %>
    <tr>
      <td><%= proficiency_post.title %></td>
      <td><%= proficiency_post.username %></td>
      <td><%= proficiency_post.date %></td>
      <td><%= proficiency_post.content %></td>
      <td><%= link_to 'Show', proficiency_post %></td>
      <td><%= link_to 'Edit', edit_proficiency_post_path(proficiency_post) %></td>
      <td><%= link_to 'Destroy', proficiency_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
  <% if @user.permission_level > 1 %>
  <%= link_to 'Proficiency Post', new_proficiency_post_path(:proficiency =>  @proficiency)%>
  <% end %>
  <br/>

  <%= link_to 'All Proficiencies', proficiencies_path %>
</div>
